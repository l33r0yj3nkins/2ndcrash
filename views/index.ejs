<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Crash Game</title>
  <link rel="stylesheet" href="/style.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
</head>
<body>
  <h1>Crash Game</h1>

  <div id="game-container">
    <canvas id="multiplierChart"></canvas>
    <div id="currentMultiplier">1.00x</div>
  </div>

  <div id="controls">
    <input type="number" id="betAmount" placeholder="Bet Amount" min="1" step="0.01" aria-label="Bet Amount">
    <input type="number" id="autoCashOut" placeholder="Auto Cash-Out at X Multiplier" min="1" step="0.01" aria-label="Auto Cash-Out">
    <button id="placeBetButton" aria-label="Place Bet">Place Bet</button>
    <button id="cashOutButton" aria-label="Cash Out">Cash Out</button>
  </div>

  <div id="status"></div>

  <div id="loading" style="display: none;">Loading...</div> <!-- Optional loading feedback -->

  <div id="pools">
    <p>Prize Pool: <span id="prizePool">1000</span></p>
    <p>House Pool: <span id="housePool">0</span></p>
    <p>Jackpot Pool: <span id="jackpotPool">0</span></p>
  </div>

  <div id="leaderboardContainer">
    <h2>Leaderboard</h2>
    <ol id="leaderboard"></ol>
  </div>

  <div id="playerListContainer">
    <h2>Live Players</h2>
    <ul id="playerList"></ul>
  </div>

  <div id="chatContainer">
    <h2>Live Chat</h2>
    <div id="chatMessages"></div>
    <input type="text" id="chatInput" placeholder="Type a message..." aria-label="Chat Input"
           onkeypress="if(event.key === 'Enter'){document.getElementById('chatSendButton').click();}">
    <button id="chatSendButton" aria-label="Send Chat Message">Send</button>
  </div>

  <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
  <script src="/script.js"></script>
</body>
</html>
